<resources>
    <!-- Base application theme. -->
    <style name="MainThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/eb_garamond</item>
        <item name="android:textColor">@color/colorSoftBlack</item>
    </style>

    <style name="SmokingThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fontFamily">@font/eb_garamond</item>
        <item name="android:textColor">@color/colorSoftBlack</item>
    </style>

    <style name="BigText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">32sp</item>
        
    </style>

    <style name="MainFrames">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/frame_rounded</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="font">@font/eb_garamond</item>
    </style>

    <style name="EmptyGraphNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">32dp</item>
    </style>
    
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSizeMedium</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ContentText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSizeSmall</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
