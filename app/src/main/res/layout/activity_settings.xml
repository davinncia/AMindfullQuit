<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context=".settings.SettingsActivity">

        <TextView
            android:id="@+id/text_view_title_nowadays_consumption_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="Nowadays consumption"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_quantity"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content1_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_title_nowadays_consumption_settings" />

        <TextView
            android:id="@+id/title1_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Default cigarette quantity"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_view_default_consumption_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@id/text_view_title_nowadays_consumption_settings" />

        <TextView
            android:id="@+id/textView_content1_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Automatic count per day"
            app:layout_constraintEnd_toStartOf="@+id/text_view_default_consumption_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/title1_settings" />

        <TextView
            android:id="@+id/text_view_default_consumption_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content1_settings"
            app:layout_constraintEnd_toStartOf="@+id/image_button_default_number_settings"
            app:layout_constraintTop_toTopOf="@+id/title1_settings"
            tools:text="0" />

        <ImageButton
            android:id="@+id/image_button_default_number_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content1_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title1_settings" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_date"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content2_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/title2_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Date"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_view_starting_date_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView_content2_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:text="Quitting date"
            app:layout_constraintEnd_toStartOf="@+id/text_view_starting_date_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/title2_settings" />

        <TextView
            android:id="@+id/text_view_starting_date_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content2_settings"
            app:layout_constraintEnd_toStartOf="@+id/image_button_starting_date_settings"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            tools:text="0" />

        <ImageButton
            android:id="@+id/image_button_starting_date_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content2_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <View
            android:id="@+id/separator2_settings"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="24dp"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_content2_settings" />

        <TextView
            android:id="@+id/text_view_title_past_consumption_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="Past consumption"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator2_settings" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_quantity"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content3_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_past_consumption_settings" />

        <TextView
            android:id="@+id/title3_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Quantity"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_view_starting_date_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_past_consumption_settings" />

        <TextView
            android:id="@+id/textView_content3_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:text="Cigarettes per day"
            app:layout_constraintEnd_toStartOf="@+id/text_view_starting_date_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/title3_settings" />

        <TextView
            android:id="@+id/text_view_previous_consumption_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content3_settings"
            app:layout_constraintEnd_toStartOf="@+id/image_button_previous_consumption_settings"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_past_consumption_settings"
            tools:text="0" />

        <ImageButton
            android:id="@+id/image_button_previous_consumption_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content3_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title_past_consumption_settings" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_cigarette_pack"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content4_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_button_previous_consumption_settings" />

        <TextView
            android:id="@+id/title4_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Pack"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_view_cigarettes_per_pack_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView_content4_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:text="Number of cigarettes in a pack"
            app:layout_constraintEnd_toStartOf="@+id/text_view_cigarettes_per_pack_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/title4_settings" />

        <TextView
            android:id="@+id/text_view_cigarettes_per_pack_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content4_settings"
            app:layout_constraintEnd_toStartOf="@+id/image_button_cigarettes_per_pack_settings"
            app:layout_constraintTop_toTopOf="@+id/title4_settings"
            tools:text="0" />

        <ImageButton
            android:id="@+id/image_button_cigarettes_per_pack_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content4_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_money"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content5_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/title5_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Price"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_view_pack_price_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView_content5_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:text="Price of a cigarette pack"
            app:layout_constraintEnd_toStartOf="@+id/text_view_pack_price_settings"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/title5_settings" />

        <TextView
            android:id="@+id/text_view_pack_price_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content5_settings"
            app:layout_constraintEnd_toStartOf="@+id/image_button_cigarettes_per_pack_settings"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            tools:text="0" />

        <ImageButton
            android:id="@+id/image_button_pack_price_settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/textView_content5_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>